<section id="new_item">
<h1>Create Item</h1>


<%= form_with url: merchant_items_path, local: true do |f| %>

    <%= f.label "Item Name:" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label "Item Description:" %>
    <%= f.text_field :description %>
    <br>
    <%= f.label "Item Price:" %>
    <%= f.text_field :unit_price %>
    <%= f.submit "Create Item"  %>

<% end %>

</section>